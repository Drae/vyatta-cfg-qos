tag:
type: txt
help: "Ethernet interface name"
syntax: exec " \
        if [ -z \"`ip link | egrep -v 'eth[0-9]+[.]' | grep $(@)`\" ]; then \
          echo Invalid ethernet interface [$(@)]; \
          exit 1 ; \
        fi ; "
